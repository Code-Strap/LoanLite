<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    android:padding="24dp"
    android:scrollbars="none"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Top Icon -->
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/caution"
            android:layout_gravity="center"
            android:layout_marginTop="40dp" />

        <!-- Heading Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending for Verification"
            android:textColor="#212121"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your documents are under review. Weâ€™ll notify you once verified."
            android:textColor="#666666"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp" />

        <!-- CardView for User Info -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textAadhaarDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aadhaar:  "
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/textPanDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PAN:  "
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/textAddressDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address:  "
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/textPincodeDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pincode:  "
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#212121" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Edit Details Button -->
        <Button
            android:id="@+id/btnEditDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Details"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp" />

        <!-- Privacy Message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”’ Your data is encrypted and secure."
            android:textColor="#4CAF50"
            android:textSize="13sp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />

        <!-- Bottom Illustration -->
        <com.airbnb.lottie.LottieAnimationView
            android:layout_marginTop="5dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_rawRes="@raw/document_lottie"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

    </LinearLayout>
</ScrollView>
