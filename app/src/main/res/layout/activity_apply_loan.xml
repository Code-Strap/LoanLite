<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:overScrollMode="never"
    android:background="@color/LR_Theme"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Card Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:padding="20dp">

                <!-- Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loan Application Form"
                    android:textColor="#3D5AFE"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingBottom="16dp" />

                <!-- Loan Amount -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter Loan Amount"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <!-- Reason -->
                <EditText
                    android:id="@+id/etLoanAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@android:drawable/editbox_background"
                    android:hint="e.g. ₹500"
                    android:inputType="number"
                    android:padding="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reason for Loan"
                    android:layout_marginTop="16dp"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etLoanReason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g. Medical emergency"
                    android:inputType="text"
                    android:layout_marginTop="6dp"
                    android:background="@android:drawable/editbox_background"
                    android:padding="12dp" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="#DDDDDD" />

                <!-- Summary -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loan Summary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="16dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginHorizontal="12dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/summaryTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="8dp"
                            android:text="Loan Summary"
                            android:textColor="#000000"
                            android:textSize="19sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#DDDDDD"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/txtSummaryInterest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Interest (15%): ₹0"
                            android:textColor="#E91E63"
                            android:textSize="17sp"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/txtSummaryFee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Processing Fee (5%): ₹0"
                            android:textColor="#FF9800"
                            android:textSize="17sp"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/txtSummaryDisbursal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Disbursal Amount: ₹0"
                            android:textColor="#4CAF50"
                            android:textSize="17sp"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/txtSummaryTotal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Repayable: ₹0"
                            android:textColor="#3D5AFE"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginTop="6dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <!-- Checkbox -->
                <CheckBox
                    android:id="@+id/checkboxAgree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I agree to the Terms and Conditions"
                    android:textColor="#3D5AFE"
                    android:layout_marginTop="20dp" />

                <!-- Submit Button -->
                <Button
                    android:id="@+id/btnSubmitLoan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit Application"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#3D5AFE"
                    android:layout_marginTop="24dp"
                    android:padding="14dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
